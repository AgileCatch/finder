<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test2Fragment"
    android:background="@color/black">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_search"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_search"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toEndOf="@+id/et_search"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="@+id/et_search"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        app:layout_constraintVertical_bias="0.518" />

    <Button
        android:id="@+id/btn_all"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="All"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:backgroundTint="#0171EB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />

    <Button
        android:id="@+id/btn_music"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Music"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/btn_all"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />

    <Button
        android:id="@+id/btn_cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cinema"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btn_music"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />

    <Button
        android:id="@+id/btn_kpop"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Kpop"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btn_cinema"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />




</androidx.constraintlayout.widget.ConstraintLayout>