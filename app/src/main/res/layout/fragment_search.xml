<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <EditText
            android:id="@+id/sf_search"
            android:layout_width="350dp"
            android:layout_height="51dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/searchfragment_edit"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/searchfragment_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sf_search"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="@+id/sf_search"
            app:layout_constraintTop_toTopOf="@+id/sf_search"
            app:layout_constraintVertical_bias="0.076" />

        <Button
            android:id="@+id/button9"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0171EB"
            android:text="All"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sf_search"
            app:layout_constraintVertical_bias="0.542" />

        <Button
            android:id="@+id/button11"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginStart="12dp"
            android:text="Music"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintTop_toBottomOf="@+id/sf_search"
            app:layout_constraintVertical_bias="0.542" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginStart="12dp"
            android:text="Cinema"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button11"
            app:layout_constraintTop_toBottomOf="@+id/sf_search"
            app:layout_constraintVertical_bias="0.542" />

        <Button
            android:id="@+id/button13"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginStart="12dp"
            android:text="Kpop"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button12"
            app:layout_constraintTop_toBottomOf="@+id/sf_search"
            app:layout_constraintVertical_bias="0.542" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>